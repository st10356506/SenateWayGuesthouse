{
  "name": "senateway-guesthouse",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run __tests__/integration",
    "test:functional": "vitest run __tests__/functional",
    "test:regression": "vitest run __tests__/regression",
    "test:all": "npm run test && npm run test:integration && npm run test:functional",
    "test:security": "npm audit --audit-level=moderate && npm test -- __tests__/security/security.test.ts",
    "test:performance": "vitest run __tests__/performance",
    "test:a11y": "pa11y http://localhost:3000 || true",
    "test:e2e": "vitest run __tests__/e2e",
    "audit:fix": "npm audit fix",
    "lint:security": "eslint . --ext ts,tsx --config .eslintrc.security.js || true"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "emailjs-com": "^3.2.0",
    "firebase": "^12.4.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/google.maps": "^3.58.1",
    "@types/node": "^24.9.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.5",
    "@vitest/ui": "^4.0.5",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-security": "^3.0.1",
    "jsdom": "^27.0.1",
    "msw": "^2.11.6",
    "pa11y": "^9.0.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^7.1.12",
    "vite-bundle-visualizer": "^1.0.0",
    "vitest": "^4.0.5",
    "web-vitals": "^4.2.4"
  }
}
